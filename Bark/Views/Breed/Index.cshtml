@model IEnumerable<Breed>

<h2>Breeds</h2>
</br>

<div style =" display: block">
    
    <button><a href="/Breed/InsertBreed/">Create a new breed</a></button>
</div>


<table class="table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Size</th>
        <th>Temperment</th>
        <th>Life Expectancy</th>
        <th>Hair Type</th>

    </tr>
   
    @foreach (var breed in Model)
    {
        <tr>
            <td><button><a href=/Breed/ViewBreed/@breed.ID>@breed.ID</a></button></td>
            <td>@breed.Name</td>
            <td>@breed.Size</td>
            <td>@breed.Temperment</td>
            <td>@breed.Life_Expectancy</td>
            <td>@breed.Hair_Type</td>
        </tr>
     }
</table>
